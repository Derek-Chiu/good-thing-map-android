<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/divider_height" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/list_image_view"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/placeholder_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_flavor"
            android:visibility="invisible"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_favor_disable"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="TITLE"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/list_distance"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/list_image_view" />

        <TextView
            android:id="@+id/list_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:maxLines="1"
            android:textColor="@color/sub_text_color"
            android:text="addressaddressaddressaddressaddressaddresaddreaddresssss"
            android:layout_toLeftOf="@+id/list_distance"
            android:layout_toRightOf="@+id/list_image_view"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/list_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_gravity="center|right"
            android:text="1000km"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>


</android.support.v7.widget.CardView>